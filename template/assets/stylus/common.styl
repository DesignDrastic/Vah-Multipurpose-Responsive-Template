/*!
* Text gradient css
*/
.txt-gradient
	background: $gradient-color1
	background: -webkit-linear-gradient(left, $gradient-color1, $gradient-color2)
	background: -moz-linear-gradient(left, $gradient-color1, $gradient-color2)
	background: linear-gradient(left, $gradient-color1, $gradient-color2)
	-webkit-background-clip: text
	background-clip: text
	-webkit-text-fill-color: transparent

/*!
* Text gradient reverse
*/
.txt-gradient-reverse
	background: $gradient-color2
	background: -webkit-linear-gradient(left, $gradient-color2, $gradient-color1)
	background: -moz-linear-gradient(left, $gradient-color2, $gradient-color1)
	background: linear-gradient(left, $gradient-color2, $gradient-color1)
	-webkit-background-clip: text
	background-clip: text
	-webkit-text-fill-color: transparent

/*!
* Background gradient css
*/
.gradient-primary
	background: -webkit-linear-gradient( $primary-clr, $hover-clr)
	background: -moz-linear-gradient( $primary-clr, $hover-clr)
	background: linear-gradient( $primary-clr, $hover-clr)
	-webkit-background-clip: text
	background-clip: text
	-webkit-text-fill-color: transparent
	text-fill-color: transparent

/*!
* ******** Custom text gradient css ********
*/
vah-txt-gradient($direction, $clr1, $clr2)
	background: $color1
	background: -webkit-linear-gradient($direction, $clr1, $clr2)
	background: -moz-linear-gradient($direction, $clr1, $clr2)
	background: linear-gradient($direction, $clr1, $clr2)
	-webkit-background-clip: text
	background-clip: text
	-webkit-text-fill-color: transparent

/*!
* simple gradient
*/
.gradient
	background: $gradient-color1
	background: -webkit-linear-gradient(to right, $gradient-color1, $gradient-color2)
	background: -moz-linear-gradient(to right, $gradient-color1, $gradient-color2)
	background: linear-gradient(to right, $gradient-color1, $gradient-color2)

/*!
* Dark overlay
*/
.vah-theme-overlay
	background: -webkit-linear-gradient(to right, rgba($gradient-color1, .5), rgba($gradient-color1, .5))
	background: -moz-linear-gradient(to right, rgba($gradient-color1, .5), rgba($gradient-color1, .5))
	background: linear-gradient(to right, rgba($gradient-color1, .5), rgba($gradient-color2, .5))

/*!
* Background image gradient
*/
.vah-awesome-gradient
	background: url(../images/parallax-bg.jpg)
	background-size: 100%
	background-position: center
	-webkit-background-clip: text
	background-clip: text
	-webkit-text-fill-color: transparent
	animation-name: vah-awesome-animation
	animation-duration: 60s
	animation-iteration-count: infinite
	animation-timing-function: linear

/*!
* Header Moving Animation 
*/
@keyframes vah-awesome-animation
	0%
		background-position-x: 0px 
	50%
		background-position-x: -160px
	100%
		background-position-x: 0


